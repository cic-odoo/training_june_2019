<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="res.groups" id="manager_session_group">
        <field name="name">Manager Session Group</field>
    </record>
    
    <record id="only_instructor_can_modify" model="ir.rule">
            <field name="name">Only Instructor can modify Session</field>
            <field name="model_id" ref="model_open_academy_session"/>
            <field name="groups" eval="[(4, ref('open_academy.manager_session_group'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                ['|', ('instructor_id','=',False),
                      ('instructor_id','=',user.id)]
            </field>
        </record>
</odoo>